docker pull quay.io/michaelholttech/puppetserver:modular-config
docker run -d --name=puppet \
-e PUPPETSERVER_JAVA_ARGS="-Xms384m -Xmx384m -XX:MaxPermSize=256m" \
-p 0.0.0.0:8140:8140 \
-h puppet.rlcit.org \
quay.io/michaelholttech/puppetserver:modular-config


sudo puppet apply --hiera_config /root/bootstrap/hiera/hiera.yaml --modulepath=/root/bootstrap/modules /root/bootstrap/configure.pp
